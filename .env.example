# AutoDoc AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Anthropic API Key (required for Claude Sonnet 4)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ChromaDB Settings (optional)
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=autodoc_knowledge_base

# Model Settings (optional)
DEFAULT_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=4096
TEMPERATURE=0.7

# Application Settings (optional)
DEBUG=False
LOG_LEVEL=INFO

# Streamlit Settings (optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Cost Tracking (optional)
ENABLE_COST_TRACKING=True
COST_TRACKING_FILE=./outputs/cost_history.json

# PDF Generation (optional)
PDF_GENERATION_BACKEND=weasyprint  # Options: weasyprint, pandoc
